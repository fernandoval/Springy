{
	"name": "fval/springy",
	"description": "Springy",
	"license": "MIT",
	"type": "project",
	"config": {
        "vendor-dir": "www/system/vendor"
    },
	"extra": {
        "installer-paths": {
            "www/system/vendor/{$name}": ["vendor/package"]
        },
		"post-install": {
			"components/jquery": {
				"target": "www/assets/jquery"
			},
			"twbs/bootstrap": {
				"target": "www/assets/bootstrap"
			}
		}
    },
    "require": {
		"php": ">=5.4.0",
		
		"smarty/smarty": "*",
		"twig/twig": "*",
		"ircmaxell/password-compat": "*",
		"sendgrid/sendgrid": "~4.0",
		"phpmailer/phpmailer": "~5.2",
		
		"components/jquery": "2.1.3",
		"twbs/bootstrap": "3.3.*"
    },
	"change-this-to-scripts": {
		"post-install-cmd": "php -f post-install.php",
		"post-update-cmd": "php -f post-install.php"
	},
	"repositories": []
}
